# ============================================
# General Configuration
# ============================================

# 部署者私钥（需要测试网 ETH 作为 gas）
# WARNING: Never commit real private keys!
PRIVATE_KEY=0x...

# ============================================
# Network RPC URLs
# ============================================

# Ethereum Sepolia Testnet (for RedPacket)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Base Sepolia Testnet (for DeGift)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# ============================================
# Etherscan/BaseScan API Keys (for verification)
# ============================================

# Etherscan API Key (for Ethereum Sepolia)
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# BaseScan API Key (for Base Sepolia)
BASESCAN_API_KEY=YOUR_BASESCAN_API_KEY

# ============================================
# RedPacket Contract Configuration (Sepolia)
# ============================================

# 手续费接收地址（可以使用部署者地址）
FEE_COLLECTOR=0x...

# Chainlink VRF Sepolia 配置
VRF_COORDINATOR=0x8103B0A8A00be2DDC778e6e7eaa21791Cd364625
VRF_KEY_HASH=0x474e34a077df58807dbe9c96d3c009b23b3c6d0cce433e59bbf5b34f823bc56c
VRF_SUBSCRIPTION_ID=1

# 开发模式（true = 允许 owner 手动设置随机数，false = 使用真实 VRF）
DEV_MODE=true

# ============================================
# DeGift Contract Configuration (Base Sepolia)
# ============================================

# DeGift 合约不需要构造函数参数
# 部署后会自动获得合约地址

# ============================================
# Deployment Instructions
# ============================================

# RedPacket (Ethereum Sepolia):
#   forge script script/Deploy.s.sol:DeployScript --rpc-url $SEPOLIA_RPC_URL --broadcast --verify

# DeGift (Base Sepolia):
#   forge script script/DeployDeGift.s.sol:DeployDeGift --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast --verify -vvvv
