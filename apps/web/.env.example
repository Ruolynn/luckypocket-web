# API Configuration
# Backend API endpoint (default: http://localhost:3001)
NEXT_PUBLIC_API_URL=http://localhost:3001

# WalletConnect Project ID
# Get your project ID from https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=YOUR_PROJECT_ID

# Development Mode Settings
# Enable mock wallet for testing without connecting real wallet
NEXT_PUBLIC_MOCK_WALLET=false

# Smart Contract Addresses
# Red Packet Contract Address (deployed on Base/Base Sepolia)
NEXT_PUBLIC_RED_PACKET_CONTRACT_ADDRESS=

# Chain Configuration (optional, defaults to Base Mainnet)
# NEXT_PUBLIC_CHAIN_ID=8453
